<resources>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorOnPrimary">@color/color_244A92</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_244A92</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextViewSubTitleStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_244A92</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_radius_20</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingEnd">70dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListCarsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/color_68696A</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorOnPrimary">@color/color_244A92</item>
        <item name="colorAccent">@color/color_0f8145</item>
    </style>

    <style name="MyLabelSliderStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/color_148250</item>
    </style>
</resources>