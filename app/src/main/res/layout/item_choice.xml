<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/background_radius_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_checkbox"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:paddingVertical="3dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_content"
        app:srcCompat="@drawable/ic_checkbox_unchecked" />

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="marquee"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_checkbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Choice A" />

</androidx.constraintlayout.widget.ConstraintLayout>